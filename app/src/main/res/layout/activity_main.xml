<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/black"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/previCal"
            android:layout_marginTop="5dp"
            android:textAlignment="textEnd"
            android:textSize="29sp"
            android:textColor="@color/white"
            android:textStyle="bold|normal"
            android:background="#00000000"
            android:maxLines="1"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>

        <EditText
            android:id="@+id/resultat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:enabled="false"
            android:hint="0"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="45sp"
            android:textStyle="bold|normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha=".5"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:minWidth="0dp"
            android:onClick="backSpaceBtn"
            app:backgroundTint="@color/yellows"
            app:icon="@android:drawable/ic_input_delete"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:shapeAppearanceOverlay="@style/Button8" />


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="clearBtn"
                    android:padding="2dp"
                    android:text="@string/clearText"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/yellows"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnSin"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:textAllCaps="false"
                    android:onClick="trigSinBtn"
                    android:padding="2dp"
                    android:text="@string/sin"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnCos"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:textAllCaps="false"
                    android:onClick="trigCosBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/cos"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnTan"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:textAllCaps="false"
                    android:onClick="trigtanBtn"
                    android:padding="2dp"
                    android:text="@string/tan"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/btnLog"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:textAllCaps="false"
                    android:onClick="logBtn"
                    android:padding="2dp"
                    android:text="@string/log"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnLn"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="lnBtn"
                    android:textAllCaps="false"
                    android:padding="2dp"
                    android:text="@string/ln"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnRacine"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="sqrtBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/racine"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnFraction"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="fraction"
                    android:padding="2dp"
                    android:text="@string/fraction"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/btnPuis2"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="puis2"
                    android:padding="2dp"
                    android:text="@string/puissance2"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnPuis"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="puis"
                    android:padding="2dp"
                    android:text="@string/puissance"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnAbs"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="absBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/vabs"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
