                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="eBtn"
                    android:padding="2dp"
                    android:text="@string/e"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/btnPi"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="piBtn"
                    android:padding="2dp"
                    android:text="@string/pi"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/parenthesesOpenText"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="parOpenBtn"
                    android:padding="2dp"
                    android:text="@string/parOuvert"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/parenthesesCloseText"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="parcloseBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/parFerme"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="#595858"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnDivide"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="divideBtn"
                    android:padding="2dp"
                    android:text="@string/divideText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/yellows"
                    app:shapeAppearanceOverlay="@style/Button8" />



            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/button7"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="sevenBtn"
                    android:padding="2dp"
                    android:text="@string/sevenText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn001"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="eightBtn"
                    android:padding="2dp"
                    android:text="@string/eightText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn003"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="nineBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/nineText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="multiplyBtn"
                    android:padding="2dp"
                    android:text="@string/multiplyText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/yellows"
                    app:shapeAppearanceOverlay="@style/Button8" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/btn012"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="foureBtn"
                    android:padding="2dp"
                    android:text="@string/fourText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn0011"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="fiveBtn"
                    android:padding="2dp"
                    android:text="@string/fiveText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="sixBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/sixText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnDivides"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="subtractBtn"
                    android:padding="2dp"
                    android:text="@string/subtractText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/yellows"
                    app:shapeAppearanceOverlay="@style/Button8" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/btn032"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="oneBtn"
                    android:padding="2dp"
                    android:text="@string/oneText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn021"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="twoBtn"
                    android:padding="2dp"
                    android:text="@string/twoText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn031"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="threeBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/threeText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnDividess"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="addBtn"
                    android:padding="2dp"
                    android:text="@string/addText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/yellows"
                    app:shapeAppearanceOverlay="@style/Button8" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/btn025"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="zeroBtn"
                    android:padding="2dp"
                    android:text="@string/zeroText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn036"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="decimalBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/decimalText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnDiv"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_span="2"
                    android:elevation="15dp"
                    android:onClick="equalsBtn"
                    android:padding="2dp"
                    android:text="@string/equalsText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/yellows"
                    app:shapeAppearanceOverlay="@style/Button8" />
            </TableRow>

        </TableLayout>



    </LinearLayout>

</LinearLayout>